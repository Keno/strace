. "${srcdir=.}/mmap_name.sh"

check_prog sed

xlat_opt=""
[ "$#" -gt 0 ] && xlat_opt="-X$1"
align=20
[ "$#" -gt 1 ] && align="$2"

get_mmap_name ""

syscall=$mmap,madvise,mlockall,mprotect,mremap,msync,munmap

run_prog "../$NAME" $mmap > /dev/null
run_strace -a$align -e$syscall $xlat_opt $args > "$EXP"
sed -n "/^$mmap(NULL, 0, \(0 \/\* PROT_NONE \*\/\|0\|PROT_NONE\),/,\$p" < "$LOG" > "$OUT"
match_diff "$OUT" "$EXP"
